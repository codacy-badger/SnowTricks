{# src/GB/UserBundle/Resources/views/User/reset.html.twig #}

{% extends "GBUserBundle::layout.html.twig" %}

{% block content %}
    <div class="col-8 well"> 
        <form method="post">
            <H2>Renouvellement de mot de passe pour : {{ user.userName }}</H2>
            <div class="col-6">
                <div class="form-group">
                    <label for="password">Nouveau mot de passe : </label></br>
                    <input id="password" name="password" type="password">
                </div>
                <div class="form-group">
                    <input type="submit" class="btn-primary" value="Modifier le mot de passe">
                </div>
            </div>
        </form>
    </div>
{% endblock %}
